<h2>All our Flats</h2>
<div class="card-flats">
  <% @flats.each do |flat| %>
    <div class="card-flat">
      <%= link_to flat.name, flat_path(flat) %>
      <img class="img-card-flat" src="https://cdn.apartmenttherapy.info/image/upload/v1619013756/at/house%20tours/2021-04/Erin%20K/KERR-130-CLARKSON-2R-01-020577-EDIT-WEB.jpg" alt="flat">
      <div class="card-flat-details">
        <%= flat.price_per_night %>
        <%= flat.number_of_guests %>
      </div>
      <div class="card-flat-btn">
        <%= link_to "More Info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
